<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#3A3A3A"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PlayerStats"
    android:background="#3A3A3A"
    >

    <TextView
        android:id="@+id/player_stat_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:text="  PLAYER INFO"
        android:padding="8dp"
        android:background="@android:color/black"
        />

    <ImageView
        android:id="@+id/fav_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/player_stat_info_text"
        app:layout_constraintBottom_toBottomOf="@id/player_stat_info_text"
        app:layout_constraintEnd_toEndOf="@id/player_stat_info_text"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"

        android:src="@drawable/ic_star_border_white_24"
        />


    <ImageView
        android:id="@+id/stat_player_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_stat_info_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/ic_person_white_24"
        />

    <TextView
        android:id="@+id/stat_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/stat_player_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        />

    <View
        android:id="@+id/separator_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/stat_player_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:background="@android:color/black"
        />

    <TextView
        android:id="@+id/role_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/separator_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Role"
        />

    <TextView
        android:id="@+id/player_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/role_text"
        app:layout_constraintBottom_toBottomOf="@+id/role_text"
        app:layout_constraintStart_toEndOf="@id/role_text"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/team_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/role_text"
        app:layout_constraintStart_toStartOf="@+id/role_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Team"
        />

    <TextView
        android:id="@+id/player_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/team_text"
        app:layout_constraintBottom_toBottomOf="@+id/team_text"
        app:layout_constraintStart_toStartOf="@id/player_role"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/origin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/team_text"
        app:layout_constraintStart_toStartOf="@+id/role_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Origin"
        />

    <TextView
        android:id="@+id/player_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/origin_text"
        app:layout_constraintBottom_toBottomOf="@+id/origin_text"
        app:layout_constraintStart_toStartOf="@id/player_role"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/statistics_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/origin_text"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:layout_marginTop="5dp"
        android:text="  STATISTICS"
        android:background="@android:color/black"
        />

    <TextView
        android:id="@+id/total_runs_scored_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/statistics_text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Runs Scored"
        />

    <TextView
        android:id="@+id/player_total_runs_scored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/total_runs_scored_text"
        app:layout_constraintBottom_toBottomOf="@+id/total_runs_scored_text"
        app:layout_constraintStart_toEndOf="@id/total_runs_scored_text"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/total_balls_played_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/total_runs_scored_text"
        app:layout_constraintStart_toStartOf="@+id/total_runs_scored_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Balls Played"
        />

    <TextView
        android:id="@+id/player_total_balls_played"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/total_balls_played_text"
        app:layout_constraintBottom_toBottomOf="@+id/total_balls_played_text"
        app:layout_constraintStart_toStartOf="@id/player_total_runs_scored"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/strike_rate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/total_balls_played_text"
        app:layout_constraintStart_toStartOf="@+id/total_runs_scored_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Batting S/R"
        />

    <TextView
        android:id="@+id/player_strike_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/strike_rate_text"
        app:layout_constraintBottom_toBottomOf="@+id/strike_rate_text"
        app:layout_constraintStart_toStartOf="@id/player_total_runs_scored"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/highest_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/strike_rate_text"
        app:layout_constraintStart_toStartOf="@+id/total_runs_scored_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Highest Score"
        />

    <TextView
        android:id="@+id/player_highest_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/highest_score_text"
        app:layout_constraintBottom_toBottomOf="@+id/highest_score_text"
        app:layout_constraintStart_toStartOf="@id/player_total_runs_scored"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/total_fours_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/highest_score_text"
        app:layout_constraintStart_toStartOf="@+id/total_runs_scored_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Fours"
        />

    <TextView
        android:id="@+id/player_total_fours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/total_fours_text"
        app:layout_constraintBottom_toBottomOf="@+id/total_fours_text"
        app:layout_constraintStart_toStartOf="@id/player_total_runs_scored"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/total_sixes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/total_fours_text"
        app:layout_constraintStart_toStartOf="@+id/total_runs_scored_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Sixes"
        />

    <TextView
        android:id="@+id/player_total_sixes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/total_sixes_text"
        app:layout_constraintBottom_toBottomOf="@+id/total_sixes_text"
        app:layout_constraintStart_toStartOf="@id/player_total_runs_scored"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/total_fifties_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/total_sixes_text"
        app:layout_constraintStart_toStartOf="@+id/total_runs_scored_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Fifties"
        />

    <TextView
        android:id="@+id/player_total_fifties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/total_fifties_text"
        app:layout_constraintBottom_toBottomOf="@+id/total_fifties_text"
        app:layout_constraintStart_toStartOf="@id/player_total_runs_scored"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/total_centuries_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/total_fifties_text"
        app:layout_constraintStart_toStartOf="@+id/total_runs_scored_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Centuries"
        />

    <TextView
        android:id="@+id/player_total_centuries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/total_centuries_text"
        app:layout_constraintBottom_toBottomOf="@+id/total_centuries_text"
        app:layout_constraintStart_toStartOf="@id/player_total_runs_scored"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/total_runs_given_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/total_centuries_text"
        app:layout_constraintStart_toStartOf="@+id/total_runs_scored_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Runs Conceded"
        />

    <TextView
        android:id="@+id/player_total_runs_given"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/total_runs_given_text"
        app:layout_constraintBottom_toBottomOf="@+id/total_runs_given_text"
        app:layout_constraintStart_toStartOf="@id/player_total_runs_scored"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/total_balls_bowled_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/total_runs_given_text"
        app:layout_constraintStart_toStartOf="@+id/total_runs_scored_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Balls Bowled"
        />

    <TextView
        android:id="@+id/player_total_balls_bowled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/total_balls_bowled_text"
        app:layout_constraintBottom_toBottomOf="@+id/total_balls_bowled_text"
        app:layout_constraintStart_toStartOf="@id/player_total_runs_scored"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/economy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/total_balls_bowled_text"
        app:layout_constraintStart_toStartOf="@+id/total_runs_scored_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Economy"
        />

    <TextView
        android:id="@+id/player_economy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/economy_text"
        app:layout_constraintBottom_toBottomOf="@id/economy_text"
        app:layout_constraintStart_toStartOf="@id/player_total_runs_scored"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/total_wickets_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/economy_text"
        app:layout_constraintStart_toStartOf="@+id/total_runs_scored_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Wickets Taken"
        />

    <TextView
        android:id="@+id/player_total_wickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/total_wickets_text"
        app:layout_constraintBottom_toBottomOf="@+id/total_wickets_text"
        app:layout_constraintStart_toStartOf="@id/player_total_runs_scored"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/bowling_strike_rate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/total_wickets_text"
        app:layout_constraintStart_toStartOf="@+id/total_runs_scored_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Bowling S/R"
        />

    <TextView
        android:id="@+id/player_bowling_strike_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/bowling_strike_rate_text"
        app:layout_constraintBottom_toBottomOf="@+id/bowling_strike_rate_text"
        app:layout_constraintStart_toStartOf="@id/player_total_runs_scored"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/total_catches_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bowling_strike_rate_text"
        app:layout_constraintStart_toStartOf="@+id/total_runs_scored_text"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        android:text="Catches"
        />

    <TextView
        android:id="@+id/player_total_catches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/total_catches_text"
        app:layout_constraintBottom_toBottomOf="@+id/total_catches_text"
        app:layout_constraintStart_toStartOf="@id/player_total_runs_scored"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:padding="5dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>